<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:layout_marginTop="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        tools:text="Nama Pegawai"
        android:id="@+id/namaPegawai"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@id/namaPegawai"
        tools:text="Email Pegawai"
        android:id="@+id/emailPegawai"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="4dp"
        android:background="@color/black"
        android:layout_below="@id/emailPegawai"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>
</RelativeLayout>